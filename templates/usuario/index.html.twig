{% extends 'base.html.twig' %}

{% block title %}Escuela de Música{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

       

        <h1 class="h3 mb-3 font-weight-normal">Identificación</h1>
        <label for="username">Username</label>
        <input type="text" value="{{ utimousuario }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary mt-3" type="submit">
           Entrar
        </button>
    </form>
{% endblock %}
